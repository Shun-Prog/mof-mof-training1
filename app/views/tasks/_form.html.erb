<% if task.errors.any? %>
    <div>
        <ul>
            <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with  model: task, local: true do |form| %>

    <div class="field">    
        <%= form.label :name %>
        <%= form.text_field :name %>
    <div>   

    <div class="field">    
        <%= form.label :description %>
        <%= form.text_area :description %>
    <div>  

    <div class="field">    
        <%= form.label :expired_at %>
        <%= form.datetime_field :expired_at %>
    <div>  

    <%= form.submit "保存"%>

<% end %>
